<!DOCTYPE html>
<html lang="en">

<head>
    @{await Html.RenderPartialAsync("_HeadBase"); }
    <title>Login | World is Awesome .fun</title>

    <meta name="description" content="Login for World is Awesome .fun, WiA" />
    <meta name="keywords"
          content="World is Awesome, World is Awesome .fun, World, Awesome, fun, wia, wia.fun, wia fun, experience, Diary, Travel, Trip, traveller, photo, video, login, sign in, enter">

    <!-- external -->
    <link href="~/lib/font_nunito/Nunito.css" rel="stylesheet">

    <!-- internal -->
    <link rel="stylesheet" href="~/css/style_material.min.css">
    <link rel="stylesheet" href="~/css/style.min.css">

    <script src="~/js/script_vars.min.js" type="text/javascript"></script>
    <script src="~/js/script_apicall.min.js" type="text/javascript"></script>
    <script src="~/js/script_login.js" type="text/javascript"></script>
</head>

<body>
    @{ await Html.RenderPartialAsync("_Base"); }

    @{ await Html.RenderPartialAsync("_HeaderBase"); }


    <div class="article-container" id="login-popup">
        <div class="article small">
            <form onsubmit="return loginSubmit(event)" id="login-form">
                <div class="article-header d-flex align-items">
                    <img src="/images/icons/login_avatar.svg" class="article-icon" alt="login" />
                    <h2 class="flex-auto article-title">Login</h2>
                    <!--<button type="button" class="button info" id="register-button"
                        onclick="openProfileUserPopup_register()">Sign up</button>-->
                    <a title="Signup" href="/SignUp">Sign up</a>
                </div>
                <div class="article-body">
                    <small id="login-error" class="error-color"></small>
                    <div class="input-container">
                        <label for="username" class="label">Username</label>
                        <input type="text" placeholder="Mail or nickname" id="username" class="input" required
                               autofocus />
                    </div>
                    <div class="input-container">
                        <label for="password" class="label">Password</label>
                        <input type="password" placeholder="Password" id="password" class="input"
                               required />
                    </div>

                    <div>
                        <div class="input-container d-flex align-items" id="isrememberme-container">
                            <input type="checkbox" placeholder="Remeber me?" id="isrememberme" class="checkbox mr-05" checked />
                            <label for="isrememberme">Remember me?</label>
                        </div>
                        <div>
                            <a title="Home" href="/ContactUs">Lost your account?</a>
                        </div>
                    </div>
                </div>
                <div class="article-footer d-flex">
                    <button type="submit" class="button success" id="login-confirm-button">Confirm</button>
                    <button type="reset" class="button" id="login-cancel-button">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    @{ await Html.RenderPartialAsync("_Footer"); }

</body>

</html>